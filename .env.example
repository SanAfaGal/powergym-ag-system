# Environment configuration file
ENVIRONMENT=development

# Supabase configuration
# The URL for your Supabase project
SUPABASE_URL=https://your-project-id.supabase.co

# The public anon key for Supabase (safe to expose)
SUPABASE_ANON_KEY=your-anon-key

# The service key for Supabase (keep secret, used for server-side operations)
SUPABASE_SERVICE_KEY=your-service-key

# JWT configuration
# Secret key for signing JWT tokens (keep secret)
JWT_SECRET_KEY=your-secret-key

# Algorithm used for JWT signing
JWT_ALGORITHM=HS256

# Duration (in minutes) for access token validity
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Authentication control
# Set to True to disable authentication (useful for development)
DISABLE_AUTH=False

# Admin credentials
# Email for the admin user
ADMIN_EMAIL=admin@example.com

# Password for the admin user (keep secret)
ADMIN_PASSWORD=securepassword123

# Employee credentials
# Email for the employee user
EMPLOYEE_EMAIL=employee@example.com

# Password for the employee user (keep secret)
EMPLOYEE_PASSWORD=securepassword456